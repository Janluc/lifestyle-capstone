

<div class="w-100 featured-article d-flex align-items-end" style="background: url('https://via.placeholder.com/1920x720')">
    <div>
        <h3 class="d-block"><%=@latest_article.title%></h3>
        <p class="d-block"><%=@latest_article.text%></p>
    </div>
</div>

<div class="d-flex">
    <% main_categories.each do |category|%>
        <a href="/categories/<%=category.id%>" class="flex-grow-1 category-articles pt-3  " style="background: red">
            <h5><%=category.name%> </h5>
            <div class="d-flex h-75 align-items-end">
                <div>
                    <h3><%=category_latest(category.name).title%></h3>
                </div>
            </div>
            
        </a>
    <% end %>
</div>
